<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/visitRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/list_item_selector"
    >
    <TextView android:id="@+id/patientVisitStartDate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="22sp"
              android:textStyle="bold"
        />
    <TextView android:id="@+id/patientVisitEndDate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="15sp"
              android:layout_below="@id/patientVisitStartDate"
              android:layout_alignRight="@id/patientVisitStartDate"
              android:layout_alignEnd="@id/patientVisitStartDate"
              android:visibility="gone"
        />
    <TextView android:id="@+id/patientVisitPlace"
              android:layout_below="@id/patientVisitEndDate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:textSize="18sp"
        />
    <LinearLayout android:id="@+id/visitStatus"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:gravity="center"
                  android:orientation="horizontal"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentEnd="true"
                  android:layout_marginRight="10dp"
        >
        <ImageView android:id="@+id/visitStatusIcon"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
            />
        <TextView android:id="@+id/visitStatusLabel"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="2dp"
                  android:textSize="20sp"
                  android:textStyle="bold"
            />
    </LinearLayout>
</RelativeLayout>